extends ../../templates/template.pug
include ../../mixins/plate
block append config
    //- cambiar la varialbe | PAGE | para modificar el titulo de la pagina
    - page = "Jack Daniel's Steak"
    - descripcion = "Un filete (lomito) de primera flambeado con whisky Jack Daniel’s y servido con salsa Jack Daniel’s picante."
block content
    .content__plate
        //- ingresar los datos para que se vea en la pagina en el siguiente orden
        //- imgajen | titulo | precio | ingredientes
        +plate('media/plato_principal/JACK_DANIELS_STEAK.jpg',page,'(300gr) Bs 114','(600gr) Bs 184',descripcion)
    include ../../blocks/btn_atras
    +btn("plato_principal")