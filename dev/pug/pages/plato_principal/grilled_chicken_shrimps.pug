extends ../../templates/template.pug
include ../../mixins/plate
block append config
    //- cambiar la varialbe | PAGE | para modificar el titulo de la pagina
    - page = "Grilled Chicken & Shrimps"
    - descripcion = "Nuestra opción más “light”. Filete de pollo a la parrilla, servido con una salsa a elección y langostinos a la parrilla."
block content
    .content__plate
        //- ingresar los datos para que se vea en la pagina en el siguiente orden
        //- imgajen | titulo | precio | ingredientes
        +plate('media/plato_principal/CHICKEN_AND_SHRIMP.jpg',page,'Bs 120','',descripcion)
    include ../../blocks/btn_atras
    +btn("plato_principal")