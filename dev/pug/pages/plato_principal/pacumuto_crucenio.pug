extends ../../templates/template.pug
include ../../mixins/plate
block append config
    //- cambiar la varialbe | PAGE | para modificar el titulo de la pagina
    - page = "Pacumuto Cruceño"
    - descripcion = "Brocheta de res, pollo y verduras asadas con un toque de “The Steakhouse”."
block content
    .content__plate
        //- ingresar los datos para que se vea en la pagina en el siguiente orden
        //- imgajen | titulo | precio | ingredientes
        +plate('media/plato_principal/PACUMUTO_CRUCENIO.jpg',page,'(400gr) Bs 98','',descripcion,sponsors[3])
    include ../../blocks/btn_atras
    +btn("plato_principal")