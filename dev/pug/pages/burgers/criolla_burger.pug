extends ../../templates/template.pug
include ../../mixins/plate
block append config
    //- cambiar la varialbe | PAGE | para modificar el titulo de la pagina
    - page = "Criolla Burger"
    - descripcion = "Hamburguesa casera con queso criollo, tocino, chorrellana y huevo frito."
block content
    .content__plate
        //- ingresar los datos para que se vea en la pagina en el siguiente orden
        //- imgajen | titulo | precio | ingredientes
        +plate('media/hamburguesas/CRIOLLA_BURGER.jpg',page,'(160 g) Bs 64','(250 g) Bs 80',descripcion,sponsors[0])
    include ../../blocks/btn_atras
    +btn("hamburguesas")
    


    
