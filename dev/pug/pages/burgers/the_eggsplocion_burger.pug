extends ../../templates/template.pug
include ../../mixins/plate
block append config
    //- cambiar la varialbe | PAGE | para modificar el titulo de la pagina
    - page = "The Eggsplosion"
    - descripcion = "Empezamos la “Eggsplocion” de sabores: hamburguesa con huevo frito, queso, tocino, tomate, lechuga, cebolla, pepinillos y salsa Grant's curry whiskey."
block content
    .content__plate
        //- ingresar los datos para que se vea en la pagina en el siguiente orden
        //- imgajen | titulo | precio | ingredientes
        +plate('media/hamburguesas/EGGSPLOSION_BURGER.jpg',page,'(160gr) Bs 68','(250gr) Bs 86',descripcion)
    include ../../blocks/btn_atras
    +btn("hamburguesas")