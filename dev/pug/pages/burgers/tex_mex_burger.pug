extends ../../templates/template.pug
include ../../mixins/plate
block append config
    //- cambiar la varialbe | PAGE | para modificar el titulo de la pagina
    - page = "Tex-Mex Burger"
    - descripcion = "Hamburguesa con queso, tocino, nachos, guacamole y salsa BBQ."
block content
    .content__plate
        //- ingresar los datos para que se vea en la pagina en el siguiente orden
        //- imgajen | titulo | precio | ingredientes
        +plate('media/hamburguesas/TEX_MEX_BURGER.jpg',page,'(160gr) Bs 68','(250gr) Bs 86',descripcion,sponsors[2])
    include ../../blocks/btn_atras
    +btn("hamburguesas")